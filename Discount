#include<stdio.h>
void main()
{
float amt,discount=0.0;
printf("enter the purchase amount: Rs.");
scanf("%f",&amt);
if(amt>5000)
{
discount=0.30*amt;
}
else if(amt>2000)
{
discount=0.20*amt;
}
else if(amt >1000)
{
discount=0.10*amt;}
float finalamt=amt-discount; 
printf("discount:rs.%.2f\n",discount);
printf("final amount to be paid:rs.%.2f\n",finalamt);
}
